<%layout("layouts/boilerplate")%>
<body>
  <h2 class="col-6 offset-3">Signup for WanderLust</h2>
  <div class="row">
    <div class="col-6 offset-3">
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-lable">Username:</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-lable">Email:</label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good</div>
        </div>

        <div class="mb-3">
            <label for="password" class="form-lable">password:</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good</div>
          </div>

          <button class="btn btn-success mb-3ol">Signup</button>
      </form>
    </div>
  </div>
</body>
