<%layout("layouts/boilerplate")%>
<body>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <br><br>
    <h3>Create new listing</h3>
   
    <form action="/listings" method="post">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea type="text" name="listing[description]" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-lable">Image Link</label>
            <input type="text" name="listing[image]" class="form-control" placeholder="enter image URL/Link"  >
        </div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input  type="number" name="listing[price]" class="form-control" placeholder="1200">
        </div>
      
        <div class="mb-3 col-md-8">
            <label for="country" class="form-lable">Country</label>
            <input type="text" name="listing[country]" class="form-control" placeholder="India">
        </div>
    </div>
        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input type="text" name="listing[location]" class="form-control" placeholder="Jaipur,Rajasthan">

        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    <br><br>  
  </div>
</div>  
</body>     
