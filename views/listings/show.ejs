<%layout("layouts/boilerplate")%>
<body>
<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>listing details</h3>
    </div>
    <div class="card col-5 offset-3 show-card">
        <img src="<%= showData.image %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b><%= showData.title %></b><br>
            <%= showData.description %><br>
             &#8377;<%= showData.price.toLocaleString("en-IN") %></li><br>
            <%= showData.location %><br>
            <%= showData.country %><br>
          </p>
        </div>
    </div>
    <br>
    <div class="btns">
    <a href="/listing/<%=showData._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <br>
    <form action="/listings/<%= showData._id%>/delete?_method=Delete" method="post">
        <button class="btn btn-dark offset-5"> Delete</button>
    </form>
   </div>
</div>
</body>